      // go-langserver
      "golang": {
        "command": "go-langserver",
        "filetypes": ["go"],
        "initializationOptions": {
          "gocodeCompletionEnabled": true,
          "diagnosticsEnabled": true,
          "lintTool": "golint"
        }
      },
      "dockerfile": {
        "command": "docker-langserver",
        "filetypes": ["dockerfile"],
        "args": ["--stdio"]
      },
      "efm": {
        "command": "efm-langserver",
        "args": [],
        "filetypes": ["markdown"]
      }
    }
}
